<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.randomappsinc.randomnumbergeneratorplus">

    <application
        android:name=".init.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name_abbreviated"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"
            android:configChanges="orientation|screenSize"
            android:theme="@style/no_action_bar"/>

        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/settings"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name=".activities.EditExcludedActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:label="@string/excluded_page_label"
            android:configChanges="orientation|screenSize"/>
    </application>
</manifest>
