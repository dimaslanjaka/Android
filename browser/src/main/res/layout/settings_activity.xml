<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout android:paddingLeft="5dp" android:paddingRight="5dp"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:layout_below="@id/settings">
        <Button
                android:text="@string/start_browser"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/startbrowser" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>